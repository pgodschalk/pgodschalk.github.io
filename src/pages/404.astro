---
import Button from "@components/Button.astro";
import Container from "@components/Container.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout title="Not found" description="Page not found">
  <Container class="flex h-full items-center pt-16 sm:pt-32">
    <div class="flex flex-col items-center">
      <p class="text-base font-semibold text-zinc-400 dark:text-zinc-500">
        404
      </p>
      <h1
        class="mt-4 text-4xl font-bold tracking-tight text-zinc-800 sm:text-5xl dark:text-zinc-100"
      >
        Page not found
      </h1>
      <p class="mt-4 text-base text-zinc-600 dark:text-zinc-400">
        Sorry, we couldn't find the page you're looking for.
      </p>
      <Button as="a" class="mt-4" href="/" variant="secondary"
        >Go back home</Button
      >
    </div>
  </Container>
</BaseLayout>
